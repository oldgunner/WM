@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        .navbar-right {
            float: right;
            margin-right: 15px;
            margin-left: 15px;
        }

        .navbar-left {
            float: left;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-light bg-light" role="navigation">
        <div class="navbar-left">@Html.ActionLink("Список статей", "Index", "Home")</div>
        <div class="navbar-right">@Html.ActionLink("Войти как администратор", "Login", "AdminLoginRegister")</div>
        <br />
    </div>
    <div class="row panel">
        <div class="col-sm-3">
            @Html.Action("FilterByCategories", "Filter")
            @Html.Action("FilterByTags", "Filter")
        </div>
        <div class="col-sm-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>