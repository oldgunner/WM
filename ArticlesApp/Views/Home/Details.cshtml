@model ArticlesApp.Models.Article

@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        .btn-outline-primary {
            border: none;
            color: rosybrown;
        }
    </style>

</head>
<body>
    <div>
        <div>
            <p>@Html.DisplayFor(model => model.Category)</p>
            <h4 class="text-md-center">@Html.DisplayFor(model => model.Name)</h4>
            <hr />
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                if (Model.ImageData != null)
                {
                    <div class="float-left" style="margin-right: 10px">
                        <img class="img-fluid" width="350" height="350"
                             src="@Url.Action("GetImage", "Admin", new { Model.Id })" />
                    </div>
                }
            }
            <p>@Html.DisplayFor(model => model.Description)</p>
            <p class="btn btn-outline-primary">@Html.DisplayFor(model => model.Tags)</p>

        </div>
    </div>
    <p>
        @Html.ActionLink("Вернуться к списку статей", "Index")
    </p>
</body>
</html>
